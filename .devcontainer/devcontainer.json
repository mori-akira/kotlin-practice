{
  "name": "Kotlin Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "fwcd.kotlin",
        "vscjava.vscode-java-pack",
        "esbenp.prettier-vscode"
      ]
    },
    "settings": {
      "editor.formatOnSave": true,
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "files.exclude": {
        "*.iml": true,
        ".idea": true
      }
    }
  },
  "forwardPorts": [],
  "remoteUser": "vscode"
}